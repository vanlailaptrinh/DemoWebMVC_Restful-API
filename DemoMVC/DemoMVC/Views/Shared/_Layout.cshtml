<!-- Layout cho trang web-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Seminar</title> <!-- Tiêu đề-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DemoMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="HangHoa" asp-action="Index">Seminar</a> <!--Logo bằng chữ-->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1"> <!-- Tạo danh sách các mục-->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="HangHoa" asp-action="Index">Trang chủ</a>
                            <!-- Mục TrangChu, có các liên kết đến gọi 
                            method Index của Controller để hiển thị các View tương ứng-->
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="HangHoa" asp-action="GioHang">Giỏ hàng</a>
                            <!-- Mục TrangChu, có các liên kết đến gọi
                            method GioHang của Controller để hiển thị các View tương ứng-->
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="HangHoa" asp-action="DonHang">Đơn hàng</a>
                            <!-- Mục TrangChu, có các liên kết đến gọi
                            method DonHang của Controller để hiển thị các View tương ứng-->
                        </li>
                    </ul>
                    <!-- Thêm form tìm kiếm, bên phải -->
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Tìm kiếm" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Tìm</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Thêm footer cho trang web-->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Seminar - <a asp-area="" asp-controller="HangHoa" asp-action="Index">Trang chủ</a>
            <!-- Nội dung và liên kết đến Controller để trở về Index-->
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
